@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize DataTable
            $('#cabsTable').DataTable({
                "pageLength": 10,
                "order": [[0, 'desc']],
                "responsive": true,
                "language": {
                    "emptyTable": "No cabs available",
                    "search": "Search:",
                    "paginate": {
                        "previous": "<i class='fas fa-chevron-left'></i>",
                        "next": "<i class='fas fa-chevron-right'></i>"
                    },
                    "lengthMenu": "Show _MENU_ entries",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "infoEmpty": "Showing 0 to 0 of 0 entries"
                },
                "columnDefs": [
                    { "orderable": false, "targets": [7] }
                ]
            });

            // Status change buttons
            $('.status-btn').click(function () {
                const cabId = $(this).data('id');
                const action = $(this).data('action');
                const cabName = $(this).closest('tr').find('td:nth-child(2) strong').text();

                let newStatus, message;

                switch (action) {
                    case 'available':
                        newStatus = 'Available';
                        message = `Are you sure you want to mark "${cabName}" as Available?`;
                        break;
                    case 'book':
                        newStatus = 'Booked';
                        message = `Mark "${cabName}" as Booked?`;
                        break;
                    case 'maintenance':
                        newStatus = 'Maintenance';
                        message = `Mark "${cabName}" as Under Maintenance?`;
                        break;
                    case 'unavailable':
                        newStatus = 'Unavailable';
                        message = `Mark "${cabName}" as Unavailable?`;
                        break;
                }

                if (confirm(message)) {
                    // Create form data
                    const formData = new FormData();
                    formData.append('id', cabId);
                    formData.append('status', newStatus);

                    // Send AJAX request
                    fetch('@Url.Action("UpdateCabStatus", "AdminCab")', {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        }
                    })
                        .then(response => {
                            if (response.ok) {
                                location.reload();
                            } else {
                                alert('Failed to update status. Please try again.');
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            alert('An error occurred. Please try again.');
                        });
                }
            });

            // Auto-dismiss alerts
            setTimeout(function () {
                $('.alert').alert('close');
            }, 5000);
        });

        function confirmDelete(id, name) {
            return confirm(`Are you sure you want to delete "${name}"?\n\nThis action cannot be undone!`);
        }

        // Quick status update (without modal)
        function updateStatus(cabId, status) {
            const statusText = status === 'Available' ? 'Available' :
                status === 'Booked' ? 'Booked' :
                    status === 'Maintenance' ? 'Under Maintenance' : 'Unavailable';

            if (confirm(`Change cab status to "${statusText}"?`)) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("UpdateCabStatus", "AdminCab")';

                const csrfToken = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const idInput = document.createElement('input');
                idInput.type = 'hidden';
                idInput.name = 'id';
                idInput.value = cabId;

                const statusInput = document.createElement('input');
                statusInput.type = 'hidden';
                statusInput.name = 'status';
                statusInput.value = status;

                const csrfInput = document.createElement('input');
                csrfInput.type = 'hidden';
                csrfInput.name = '__RequestVerificationToken';
                csrfInput.value = csrfToken;

                form.appendChild(idInput);
                form.appendChild(statusInput);
                form.appendChild(csrfInput);
