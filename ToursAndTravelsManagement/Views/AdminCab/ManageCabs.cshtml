@using ToursAndTravelsManagement.Enums
@model IEnumerable<ToursAndTravelsManagement.Models.Cab>
@{
    ViewData["Title"] = "Manage Cabs";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-taxi mr-2"></i>Manage Cabs
            </h1>
            <p class="text-muted mb-0">Manage your cab fleet, update status, and track availability</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="CreateCab" class="btn btn-primary">
                <i class="fas fa-plus-circle mr-1"></i> Add New Cab
            </a>
            <div class="dropdown">
                <button class="btn btn-outline-primary dropdown-toggle" type="button" id="filterDropdown"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-filter mr-1"></i> Filter
                </button>
                <div class="dropdown-menu" aria-labelledby="filterDropdown">
                    <a class="dropdown-item" asp-action="ManageCabs">All Cabs</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" asp-action="ManageCabs" asp-route-status="Available">Available</a>
                    <a class="dropdown-item" asp-action="ManageCabs" asp-route-status="Booked">Booked</a>
                    <a class="dropdown-item" asp-action="ManageCabs" asp-route-status="Maintenance">Maintenance</a>
                    <a class="dropdown-item" asp-action="ManageCabs" asp-route-status="Unavailable">Unavailable</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle mr-2"></i> @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle mr-2"></i> @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Cabs
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count()</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-taxi fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Available
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(c => c.Status == CabStatus.Available)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Booked
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(c => c.Status == CabStatus.Booked)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Unavailable
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(c => c.Status == CabStatus.Unavailable)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-times-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cabs Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center bg-primary text-white">
            <h6 class="m-0 font-weight-bold">
                <i class="fas fa-list mr-2"></i> All Cabs
            </h6>
            <div class="d-flex align-items-center">
                <div class="mr-3">
                    <small class="text-white-50">Showing @Model.Count() cabs</small>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="cabsTable" width="100%" cellspacing="0">
                        <thead class="thead-light">
                            <tr>
                                <th><i class="fas fa-id-card mr-1"></i> ID</th>
                                <th><i class="fas fa-car mr-1"></i> Cab Details</th>
                                <th><i class="fas fa-cog mr-1"></i> Specifications</th>
                                <th><i class="fas fa-map-marker-alt mr-1"></i> Location</th>
                                <th><i class="fas fa-rupee-sign mr-1"></i> Pricing</th>
                                <th><i class="fas fa-toggle-on mr-1"></i> Status</th>
                                <th><i class="fas fa-user-tie mr-1"></i> Driver</th>
                                <th><i class="fas fa-cogs mr-1"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cab in Model)
                            {
                                <tr>
                                    <td>@cab.CabId</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="mr-3">
                                                <div class="icon-wrapper bg-primary bg-opacity-10 p-2 rounded-circle">
                                                    <i class="fas fa-car text-primary"></i>
                                                </div>
                                            </div>
                                            <div>
                                                <strong>@cab.Name</strong>
                                                <div class="text-muted small">
                                                    @cab.Type • @cab.RegistrationNumber
                                                </div>
                                                <div class="text-muted smaller">
                                                    @cab.Model @cab.Year
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="specs">
                                            <div class="d-flex align-items-center mb-1">
                                                <i class="fas fa-users text-primary mr-2" style="width: 20px;"></i>
                                                <small>@cab.SeatingCapacity seats</small>
                                            </div>
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-snowflake text-primary mr-2" style="width: 20px;"></i>
                                                <small>@(cab.HasAC ? "AC Available" : "Non-AC")</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="location-info">
                                            <small class="text-muted d-block">
                                                <i class="fas fa-map-marker-alt mr-1"></i>Current Location
                                            </small>
                                            @if (!string.IsNullOrEmpty(cab.DriverName))
                                            {
                                                <small class="d-block">
                                                    With: @cab.DriverName
                                                </small>
                                            }
                                            else
                                            {
                                                <small class="text-muted">Not assigned</small>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <div class="h6 mb-0 font-weight-bold text-success">
                                            ₹@cab.BasePricePerKM/km
                                        </div>
                                        @if (!string.IsNullOrEmpty(cab.Features))
                                        {
                                            <small class="text-muted">Premium features</small>
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var statusBadge = cab.Status.ToString() switch
                                            {
                                                "Available" => "badge-success",
                                                "Booked" => "badge-primary",
                                                "Maintenance" => "badge-warning",
                                                "Unavailable" => "badge-danger",
                                                _ => "badge-secondary"
                                            };
                                            var statusIcon = cab.Status.ToString() switch
                                            {
                                                "Available" => "fa-check-circle",
                                                "Booked" => "fa-calendar-check",
                                                "Maintenance" => "fa-wrench",
                                                "Unavailable" => "fa-times-circle",
                                                _ => "fa-question-circle"
                                            };
                                        }
                                        <span class="badge @statusBadge">
                                            <i class="fas @statusIcon mr-1"></i> @cab.Status
                                        </span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(cab.DriverName))
                                        {
                                            <div class="d-flex align-items-center">
                                                <div class="driver-avatar mr-2">
                                                    <i class="fas fa-user-circle text-primary"></i>
                                                </div>
                                                <div>
                                                    <small class="d-block fw-bold">@cab.DriverName</small>
                                                    <small class="text-muted">@cab.DriverPhone</small>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <small class="text-muted">
                                                <i class="fas fa-user-clock mr-1"></i> Unassigned
                                            </small>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group-vertical btn-group-sm" role="group">
                                            <!-- Edit Button -->
                                            <a asp-action="EditCab" asp-route-id="@cab.CabId"
                                               class="btn btn-outline-primary mb-1" title="Edit Cab">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>

                                            <!-- Status Actions -->
                                            <div class="btn-group btn-group-sm" role="group">
                                                @if (cab.Status == CabStatus.Available)
                                                {
                                                    <button type="button" class="btn btn-outline-primary status-btn"
                                                            data-id="@cab.CabId" data-action="book" title="Mark as Booked">
                                                        <i class="fas fa-calendar-check"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-warning status-btn"
                                                            data-id="@cab.CabId" data-action="maintenance" title="Mark as Maintenance">
                                                        <i class="fas fa-wrench"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-danger status-btn"
                                                            data-id="@cab.CabId" data-action="unavailable" title="Mark as Unavailable">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                }
                                                else if (cab.Status == CabStatus.Booked)
                                                {
                                                    <button type="button" class="btn btn-outline-success status-btn"
                                                            data-id="@cab.CabId" data-action="available" title="Mark as Available">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-warning status-btn"
                                                            data-id="@cab.CabId" data-action="maintenance" title="Mark as Maintenance">
                                                        <i class="fas fa-wrench"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-danger status-btn"
                                                            data-id="@cab.CabId" data-action="unavailable" title="Mark as Unavailable">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                }
                                                else if (cab.Status == CabStatus.Maintenance)
                                                {
                                                    <button type="button" class="btn btn-outline-success status-btn"
                                                            data-id="@cab.CabId" data-action="available" title="Mark as Available">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-primary status-btn"
                                                            data-id="@cab.CabId" data-action="book" title="Mark as Booked">
                                                        <i class="fas fa-calendar-check"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-danger status-btn"
                                                            data-id="@cab.CabId" data-action="unavailable" title="Mark as Unavailable">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                }
                                                else if (cab.Status == CabStatus.Unavailable)
                                                {
                                                    <button type="button" class="btn btn-outline-success status-btn"
                                                            data-id="@cab.CabId" data-action="available" title="Mark as Available">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-primary status-btn"
                                                            data-id="@cab.CabId" data-action="book" title="Mark as Booked">
                                                        <i class="fas fa-calendar-check"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-warning status-btn"
                                                            data-id="@cab.CabId" data-action="maintenance" title="Mark as Maintenance">
                                                        <i class="fas fa-wrench"></i>
                                                    </button>
                                                }
                                            </div>

                                            <!-- Toggle Active/Delete -->
                                            <div class="btn-group btn-group-sm mt-1" role="group">
                                                <form asp-action="ToggleCabStatus" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@cab.CabId" />
                                                    @if (cab.IsActive)
                                                    {
                                                        <button type="submit" class="btn btn-outline-warning"
                                                                title="Deactivate Cab" onclick="return confirm('Are you sure you want to deactivate this cab?')">
                                                            <i class="fas fa-eye-slash"></i>
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button type="submit" class="btn btn-outline-success"
                                                                title="Activate Cab" onclick="return confirm('Are you sure you want to activate this cab?')">
                                                            <i class="fas fa-eye"></i>
                                                        </button>
                                                    }
                                                </form>

                                                <form asp-action="DeleteCab" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@cab.CabId" />
                                                    <button type="submit" class="btn btn-outline-danger"
                                                            title="Delete Cab" onclick="return confirmDelete(@cab.CabId, '@cab.Name')">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-car fa-4x text-muted"></i>
                    </div>
                    <h4 class="text-muted">No Cabs Found</h4>
                    <p class="text-muted mb-4">Start by adding your first cab to the fleet.</p>
                    <a asp-action="CreateCab" class="btn btn-primary">
                        <i class="fas fa-plus-circle mr-1"></i> Add Your First Cab
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Status Change Modal -->
<div class="modal fade" id="statusModal" tabindex="-1" role="dialog" aria-labelledby="statusModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="statusModalLabel">Change Cab Status</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="statusForm" method="post">
                <input type="hidden" id="cabId" name="id" />
                <input type="hidden" id="newStatus" name="status" />
                <div class="modal-body">
                    <div id="statusMessage"></div>
                    <div class="form-group">
                        <label for="statusNotes">Notes (Optional)</label>
                        <textarea class="form-control" id="statusNotes" name="notes" rows="3"
                                  placeholder="Add any notes about the status change..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Confirm Change</button>
                </div>
            </form>
        </div>
    </div>
</div>

